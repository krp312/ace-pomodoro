{
  "name": "ace-pomodoro",
  "version": "0.1.0",
  "repository": "https://github.com/krp312/ace-pomodoro",
  "description": "Full-stack pomodoro application",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "test": "run-s test:server test:client",
    "test:client": "cd client && npm run test-ci",
    "test:server": "cd server && npm test",
    "heroku-postbuild": "cd client && npm install --only=dev && npm run build",
    "dev": "run-p dev:server dev:client start",
    "dev:client": "cd client && cross-env BROWSER=none npm start -- --color=always | xp http://localhost:3000/ http://localhost:8080/",
    "dev:server": "cd server && npm start",
    "install": "run-s install:server install:client",
    "install:server": "cd server && npm install",
    "install:client": "cd client && npm install"
  },
  "cacheDirectories": [
    "node_modules",
    "server/node_modules",
    "client/node_modules"
  ],
  "license": "MIT",
  "dependencies": {
    "cross-env": "^5.2.0",
    "express": "^4.16.3",
    "http-proxy-middleware": "^0.19.0",
    "jsonwebtoken": "^8.3.0",
    "knex": "^0.15.2",
    "morgan": "^1.9.1",
    "npm-run-all": "^4.0.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "pg": "^7.3.0",
    "react": "^16.6.3",
    "react-router": "^4.3.1",
    "react-router-dom": "^4.3.1",
    "react-spinkit": "^3.0.0",
    "sqlite3": "^4.0.2",
    "xp": "^1.0.1"
  },
  "devDependencies": {
    "chai": "^4.1.1",
    "chai-http": "^4.2.0",
    "eslint": "5.6.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.11.1",
    "faker": "^4.1.0",
    "mocha": "^5.2.0"
  }
}
